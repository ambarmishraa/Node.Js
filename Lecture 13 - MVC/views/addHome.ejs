<%- include('partials/head') %>
</head>

<body>
    <header>
        <h1>Register your house here:</h1>
    </header>
    <main>
        <form action="/host/add-home" method="POST" style="max-width: 400px; margin: 2rem auto; padding: 1.5rem; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); display: flex; flex-direction: column; gap: 1rem;">
  
  <input type="text" name="houseName" placeholder="Home Name" required 
         style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;">
  
  <input type="text" name="housePrice" placeholder="Price" required 
         style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;">
  
  <input type="text" name="houseLocation" placeholder="Location" required 
         style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;">
  
  <input type="text" name="houseRating" placeholder="Rating" required 
         style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;">


         <input type="url" name="houseImage" placeholder="Image URL" required
         style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;">
  
  
  <button type="submit" 
          style="padding: 0.75rem; background-color: #007bff; color: white; border: none; border-radius: 5px; font-size: 1rem; cursor: pointer;">
    Add Home
  </button>
</form>

    </main>
</body>

</html>